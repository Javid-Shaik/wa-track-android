<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".WaTrackApplication"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:label="WaTrack"
        android:theme="@style/Theme.WaTrack"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- Splash Activity as entry point -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.WaTrack"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity (no longer launcher) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />

        <!-- Signup Activity -->
        <activity
            android:name=".ui.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.WaTrack"
            tools:ignore="Instantiatable" />

        <!-- OTP Activity -->
        <activity
            android:name=".ui.OtpActivity"
            android:exported="false"
            android:theme="@style/Theme.WaTrack"
            tools:ignore="Instantiatable" />

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.WaTrack.Dark" />

        <activity
            android:name=".ui.QrLinkActivity"
            android:exported="false"
            android:theme="@style/Theme.WaTrack" />

        <activity
            android:name=".TrackedUsersActivity"
            android:exported="false"
            android:theme="@style/Theme.WaTrack" />

        <!-- Firebase Messaging Service -->
        <service
            android:name="com.google.firebase.messaging.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Firebase App Check (optional for debug) -->
        <meta-data
            android:name="com.google.firebase.appcheck.debug.DEBUG_PROVIDER"
            android:value="true" />

    </application>
</manifest>